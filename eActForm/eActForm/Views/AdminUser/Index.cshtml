
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>

<h2>Users Management</h2>
<hr class="ruler-gl">
<div id='dialogDiv' class='modal hide fade in'>
    <div id='dialogContent'></div>
</div>
@using (Html.BeginForm("insertUsers", "AdminUser", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{


<div class="row">
    <div class="form-group">
        <div class="col-md-2 control-label">
            EmpCode :
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" required="required" id="txtEmpCode" name="txtEmpCode" />
        </div>

        <div class="col-md-2 control-label">
            Company :
        </div>
        <div class="col-md-4">
            <select class="form-control" id="ddlCompany" name="ddlCompany" required="required">
                <option value="">-Selected-</option>
                <option value="5600">MTM</option>
                <option value="5601">OMT</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 control-label">
            Customer :
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" required="required" id="txtCustomer" name="txtCustomer" />
            <input type="hidden" class="form-control" required="required" id="txtCustomerIds" name="txtCustomerIds" />
            <button type="button" onclick="javascript:onclickClearCusList()">Clear</button>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-2 control-label">
            </div>
            <div class="col-md-10">
                <div id="divCustLists">
                   
                </div>
            </div>

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-2 control-label">
            <label>
                Role :
            </label>
        </div>
        <div class="col-md-2">
            <div>
                <input type="checkbox" name="model.chkRole" value="1">
                creater
            </div>
            <div>
                <input type="checkbox" name="model.chkRole" value="2">
                approve                                   
            </div>                                        
            <div>                                         
                <input type="checkbox" name="model.chkRole" value="3">
                admin                                      
            </div>                                         
            <div>                                          
                <input type="checkbox" name="model.chkRole" value="4">
                superAdmin                                 
            </div>                                         
            <div>                                          
                <input type="checkbox" name="model.chkRole" value="5">
                adminOMT
            </div>
        </div>


        <div class="col-md-2 control-label">
            <label>
                ProductType :
            </label>
        </div>
        <div class="col-md-2">
            <div>
                <input type="checkbox" name="model.chkProductType" value="1D1097F4-246F-4DC2-BB69-B7BB6E678299">
                Non-Alcohol
            </div>
            <div>
                <input type="checkbox" name="model.chkProductType" value="FC696EB5-B058-445E-B605-977C5067AEBA">
                Alcohol
            </div>
        </div>

    </div>


</div>

   

    <div class="row text-center">
        <button type="submit" class="btn ink-reaction btn-primary"><i class="fa fa-search fa-fw"></i>&nbsp;Submit</button>
    </div>



    <div class="row">
        <hr class="ruler-gl">
        <table id="datatable" class="table table-striped table-hover">
            <thead>
                <tr style="background-color:#2B5D95;color:#ffffff;">
                    <th>Delete</th>
                    <th>Edit</th>
                    <th>รหัสพนักงาน</th>
                    <th>ชื่อ</th>
                    <th>นามสกุล</th>
                    <th>ทีม</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Create Date</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}

<script type="text/javascript">
        var index = 0;
        $(document).ready(function () {
            $('#datatable').DataTable({
                "dom": 'lCfrtip',
                "order": [],
                "language": {
                    "lengthMenu": '_MENU_ entries per page',
                    "search": '<i class="fa fa-search"></i>',
                    "paginate": {
                        "previous": '<i class="fa fa-angle-left"></i>',
                        "next": '<i class="fa fa-angle-right"></i>'
                    }
                }
            });



            $("#txtCustomer").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("getCustomerByCompany", "eAct")',
                        type: "POST",
                        dataType: "json",
                        data: {
                            companyId: $("#ddlCompany").val(),
                            txtCus: $("#txtCustomer").val(),
                        },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.cusNameTH, value: item.cusNameTH, id: item.id };
                            }))

                        }
                    })
                },
                minLength: 0,
                messages: {
                    noResults: '',
                    results: function (resultsCount) {
                    }
                }, select: function (event, ui) {
                    $("#txtCustomerIds").val($("#txtCustomerIds").val() + "," + ui.item.id);
                    $("#divCustLists").append("<div id='" + "div" + ui.item.id + "' ><input type='text' name='model.custLi[0]' value='" + ui.item.id + "'/>" + ui.item.label + "  <br/></div>");
                    index++;
                }
            }).focus(function () {
                $(this).data("uiAutocomplete").search($(this).val());
            });

            $("#txtCustomer").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Action("getCustomerByCompany", "eAct")',
                        type: "POST",
                        dataType: "json",
                        data: {
                            companyId: $("#ddlCompany").val(),
                            txtCus: $("#txtCustomer").val(),
                        },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.cusNameTH, value: item.cusNameTH, id: item.id };
                            }))

                        }
                    })
                },
                minLength: 0,
                messages: {
                    noResults: '',
                    results: function (resultsCount) {
                    }
                }, select: function (event, ui) {
                    $("#txtCustomerIds").val($("#txtCustomerIds").val() + "," + ui.item.id);
                    $("#divCustLists").append("<div id='divSubCust'><input type='hidden' name='model.custLi' value='" + ui.item.id + "'/>" + ui.item.label + " <br/></div>");
                    index++;
                }
            }).focus(function () {
                $(this).data("uiAutocomplete").search($(this).val());
            });



            $("#empId").autocomplete({
                source: function (request, response) {

                    $.ajax({
                        url: "http://thaibevss.com/masWebBackEnd/AdminAPIData/getEmpInfo",
                        type: "POST",
                        dataType: "json",
                        data: { empId: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.EmployeeId, value: item.EmployeeId, fName: item.LocalFirstName, lName: item.LocalLastName, empLevel: item.Level, empEmail: item.Email, compCode: item.CompCode, compName: item.CompanyThaiName };
                            }))
                        }
                    })
                },
                minLength: 5,
                messages: {
                    noResults: '',
                    results: function (resultsCount) {
                    }
                }, select: function (event, ui) {
                    console.log(ui.item.empEmail);
                    $("#empFName").val(ui.item.fName);
                    $("#empLName").val(ui.item.lName);
                    $("#empLevel").val(ui.item.empLevel);
                    $("#empEmail").val(ui.item.empEmail);
                    $("#empCompName").val(ui.item.compName);
                    $("#empCompCode").val(ui.item.compCode);

                }
            });

            $("#empPosition").autocomplete({
                source: function (request, response) {

                    $.ajax({
                        url: rootPath + "/AdminAPIData/getPosition",
                        type: "POST",
                        dataType: "json",
                        data: { positionName: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.PositionName, value: item.PositionName, positionId: item.PositionId };
                            }))

                        }
                    })
                },
                minLength: 1,
                messages: {
                    noResults: '',
                    results: function (resultsCount) {
                    }
                }, select: function (event, ui) {
                    $("#empPositionId").val(ui.item.positionId)
                }
            });

        });


        function onclickClearCusList() {

            $('#divSubCust').remove();
          
        }

        function onEditData(row) {

            $.ajax({
                url: rootPath + "/AdminUsers/editUser",
                data: {
                    empId: row,
                },
                dataType: "json",
                type: 'POST',
                success: function (response) {

                    $("#empId").val(response.Data.empId);
                    $("#empFName").val(response.Data.empfname);
                    $("#empLName").val(response.Data.emplname);
                    $("#empEmail").val(response.Data.empemail);
                    $("#empPhone").val(response.Data.empmb);
                    $("#empPosition").val(response.Data.empposition);
                    $("#ddlTeam").val(response.Data.empTeamId);


                }
            });
        }



</script>
