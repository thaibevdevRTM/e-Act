@using eActForm.BusinessLayer;
@model eActForm.Models.ActSignatureModel.SignModel
<div class="row">
    <div class="text-center">
        @if (Model != null)
        {
            var base64 = Convert.ToBase64String(Model.signature);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            <img src="@imgSrc" class="img-thumbnail" style="text-align:center;" />
            <p style="text-align:center">@UtilsAppCode.Session.User.empFNameTH @UtilsAppCode.Session.User.empLNameTH</p>
            <p style="text-align:center">@UtilsAppCode.Session.User.empPositionTitleTH</p>
        }
        else
        {
            <p class="text-danger">ไม่พบลายเซ็นของคุณในระบบ!!! <br />กรุณาเพิ่มลายเซ็นก่อนอนุมัติเอกสาร</p>
            @Html.ActionLink("เพิ่มลายเซ็นในระบบ Click", "index", "Signature")
        }
    </div>
</div>