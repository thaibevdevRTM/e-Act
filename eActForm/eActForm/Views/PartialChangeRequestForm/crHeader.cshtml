@model eActForm.Models.Activity_TBMMKT_Model
@using System.Globalization;
@using System.Configuration;
@{
    CultureInfo DateThai = new CultureInfo("th-TH");
    CultureInfo DateEnglish = new CultureInfo("en-US");
    var urlLogoCompany = ConfigurationManager.AppSettings["renderHostPublicIP"] + ConfigurationManager.AppSettings["renderPathFile"] + "images/Thaibev-logo.png";
}


<div id="divHeadCompany" runat="server" style="width: 100%; align-content: center; text-align: center;">
    <table style="border-color:none;width: 100%;border-collapse: collapse;" class="fontDocV1">
        <tr style="height:30px;">
            <td rowspan="2" style="width:20%;border-style: solid;border-width: 1px 1px 0px 1px; border-collapse: collapse;">
                &nbsp;
                @if (urlLogoCompany != "")
                {
                    <img width="120px" height="30px" src="@urlLogoCompany" />
                }
            </td>
            <td rowspan="2" style="width:60%;text-align: center;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;" class="fontDocV3">
                @*<b>@Model.activityFormTBMMKT.formName</b>*@
                <b>Change Request Form</b>
            </td>
            <td style="width:20%;text-align: left;border-style: solid;border-width: 1px 1px 1px 0px; border-collapse: collapse;" class="fontDocSmallV2">&nbsp;No. @Model.activityFormModel.activityNo</td>
        </tr>
        <tr style="height:30px;">
            <td style="text-align: left;border-style: solid;border-width: 0px 1px 0px 0px; border-collapse: collapse;" class="fontDocSmallV2">
                @*วันที่&nbsp;&nbsp;: @Model.activityFormModel.documentDate.Value.ToString("dd/MM/yyyy", DateEnglish)*@
                &nbsp;Date 01/01/2020
            </td>
        </tr>
    </table>
</div>

