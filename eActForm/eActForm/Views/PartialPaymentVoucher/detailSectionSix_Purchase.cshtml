                @{
                    var index = 0;
                    List<GetDataDetailPaymentAll> filterNowPayOnly = new List<GetDataDetailPaymentAll>(Model.listGetDataDetailPaymentAll);
                    List<GetDataDetailPaymentAll> filterDataHistoryPay = new List<GetDataDetailPaymentAll>(Model.listGetDataDetailPaymentAll);
                    filterNowPayOnly.RemoveAll(r => r.payNo != Model.tB_Act_ActivityForm_DetailOther.payNo);
                    var NowPayOnlyArray = filterNowPayOnly.ToArray();
                    var haveDataInArrayNowPay = filterNowPayOnly.Count;


                    filterDataHistoryPay.RemoveAll(r => r.rowNo != 1);
                    var filterDataHistoryPayArray = filterDataHistoryPay.ToArray();
                    var havefilterDataHistoryPayArray = filterDataHistoryPay.Count;
                    var NoNeedRow = 0;

                }
                @foreach (var item in Model.listGetDataDetailPaymentAll)
