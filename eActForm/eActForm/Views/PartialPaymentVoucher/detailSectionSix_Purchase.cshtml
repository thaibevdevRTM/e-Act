                        <table class="borderWidthMaxCollape">
                            <tr>
                                <td class="paddingRowTableV2N txtRight">
                                    รวม
                                </td>
                            </tr>
                            <tr>
                                <td class="paddingRowTableV2N txtRight fontRedV2">
                                    ภาษีมูลค่าเพิ่ม 7%
                                </td>
                            </tr>
                            <tr>
                                <td class="paddingRowTableV2N txtRight">
