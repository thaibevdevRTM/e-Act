@using eActForm.BusinessLayer;
@using System.Configuration;
@model eActForm.Models.Activity_TBMMKT_Model
<table style="width: 100%;">
    <tr>
        <td>
            <div class="form-group">
                <div class="control-label col-md-12 col-xs-12 hrTab" style="text-align:left;">
                    ส่วนที่ 6 : รายละเอียด ค่าใช้จ่าย (รวมภาษีมูลค่าเพิ่ม) ในงวดนี้
                </div>
            </div>
        </td>
    </tr>
</table>
<table style="width: 100%;">
    <tr>
        <td>
            <div class="form-group">
                <div id="lblCount" class="control-label col-md-2 col-xs-12">
                    สั่งจ่ายครั้งที่ :
                </div>

                <div class="col-md-3 col-xs-12">
                    <div class="row">
                        @Html.TextBoxFor(x => x.tB_Act_ActivityForm_DetailOther.payNo, new { @class = "form-control textboxcss", @id = "txtpayNo", @onKeyPress = "CheckNum()" })
                        <script>
                            $('#txtpayNo').blur(function () {
                                checktxtpayNo();
                            });
                            function checktxtpayNo() {

                                if ($('#txtpayNo').val() == "1" || $('#txtpayNo').val().replace(' ', '') == "") {
                                    $('#ddlActivityNoSub').val("");
                                    $('#ddlActivityNoSub').prop('disabled', true);
                                    $('#linkViewActNoOld').hide();
                                    $("#pvPrevious_totalallPayNo").val('');
                                } else {

                                    $("#ddlActivityNoSub option[value!='']").remove();
                                    $("#pvPrevious_totalallPayNo option[value!='']").remove();
                                    $("#ddlActivityNoSub").selectpicker('refresh');

                                    var dataToBeSend = {
                                    fiscalYear:$('#ddlFiscalYear').val()
                                    ,master_type_form_id:"@Model.activityFormTBMMKT.master_type_form_id"
                                    ,payNo:$('#txtpayNo').val()
                                    };

                                    $.ajax('@Url.Action("GetDataPVPrevious", "GetDataMainForm")',
                                    {
                                        contentType:"application/json;charset=utf-8",
                                        data:JSON.stringify(dataToBeSend),
                                        dataType:'json',
                                        type:"POST",
                                        success:function(response){
                                            if(response.Data.tbToAjax.length>0){
                                               
                                                $.each(response.Data.tbToAjax,function(){
                                                    $("#ddlActivityNoSub").append($("<option></option>").val(this['activityId']).html(this['activityNo']));
                                                    $("#ddlActivityNoSub").selectpicker('refresh');
                                                    $("#pvPrevious_totalallPayNo").append($("<option></option>").val(this['activityId']).html(this['totalallPayNo']));
                                                    $("#pvPrevious_totalallPayByIO").append($("<option></option>").val(this['activityId']).html(this['totalallPayByIO']));
                                                });
                                            }
                                            else{
                                                ddlActivityNoSubChange();  
                                            }
                                        },
                                        error:function(data){
                                            alert("ErrorGetDataGLPaymentVoucher.");
                                        }
                                    });

                                    $('#ddlActivityNoSub').prop('disabled', false);
                                }
                                calCulateAll();
                                $("#ddlActivityNoSub").selectpicker('refresh');
                            }
                        </script>
                    </div>
                </div>
                <div id="lblDoc" class="control-label col-md-2 col-xs-12" style="text-align:left;">
                    สั่งจ่ายต่อจากเอกสาร :
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="row">
                        @Html.DropDownListFor(x => x.tB_Act_ActivityForm_DetailOther.activityIdNoSub, new SelectList(Model.listGetDataPVPrevious, "activityId", "activityNo", Model.tB_Act_ActivityForm_DetailOther.activityIdNoSub), "", new
                   {
                       @class = "form-control selectpicker",
                       @title = "สำหรับกรณีสั่งจ่ายตั้งแต่ครั้งที่2ขึ้นไป",
                       id = "ddlActivityNoSub",
                       onchange= "ddlActivityNoSubChange();"
                   })
                        @Html.DropDownListFor(x => x.tB_Act_ActivityForm_DetailOther.activityIdNoSub, new SelectList(Model.listGetDataPVPrevious, "activityId", "totalallPayByIO", Model.tB_Act_ActivityForm_DetailOther.activityIdNoSub), "", new
                   {
                       @class = "form-control",
                       @style = "display: none;",
                       disabled = "disabled",
                       id = "pvPrevious_totalallPayByIO"
                   })
                        @Html.DropDownListFor(x => x.tB_Act_ActivityForm_DetailOther.activityIdNoSub, new SelectList(Model.listGetDataPVPrevious, "activityId", "totalallPayNo", Model.tB_Act_ActivityForm_DetailOther.activityIdNoSub), "", new
                   {
                       @class = "form-control",
                       @style = "display: none;",
                       disabled = "disabled",
                       id = "pvPrevious_totalallPayNo"
                   })
                        <script>
                            $('#ddlActivityNoSub').selectpicker({
                                    liveSearch: true,
                                showSubtext: true
                            });
                  
                            function ddlActivityNoSubChange() {
                                if ($('#ddlActivityNoSub').val() != '') {
                                    activeLinkViewPreviousPV();
                                    //$("#pvPrevious_totalallPayByIO").val($("#ddlActivityNoSub").val());//แก้ดึงตรงจาก EO งบผูกพันรวม ไม่ต้องดึงจากเอกสารก่อนหน้าแล้วกรณีสั่งจ่ายครั้งที่ 2 ขึ้นไป 20200709 fream
                                    $("#pvPrevious_totalallPayNo").val($("#ddlActivityNoSub").val());

                                    $('#linkViewActNoOld').show();
                                } else {
                                    //$("#pvPrevious_totalallPayByIO").val('');//แก้ดึงตรงจาก EO งบผูกพันรวม ไม่ต้องดึงจากเอกสารก่อนหน้าแล้วกรณีสั่งจ่ายครั้งที่ 2 ขึ้นไป 20200709 fream
                                    $("#pvPrevious_totalallPayNo").val('');
                                    $('#linkViewActNoOld').hide();
                                }
                                calCulateAll();

                            }

                            function activeLinkViewPreviousPV() {
                                $("#linkViewActNoOld").attr("href", "@ConfigurationManager.AppSettings["renderPathFile"]"+"MainForm?activityId=" + $('#ddlActivityNoSub').val() + "&mode=edit&typeForm=TBM&master_type_form_id=" + "@ConfigurationManager.AppSettings["formPaymentVoucherTbmId"]");
                            }
                        </script>
                    </div>
                </div>
                <div class="col-md-1 col-xs-12">
                    <div class="row" style="padding-top:3px;">
                        &nbsp;
                        @Html.ActionLink(" ", "Index", "MainForm", null, new { id = "linkViewActNoOld", @class = "btn ink-reaction btn-info fa fa-search", title = "กดเพื่อดูข้อมูลใบสั่งจ่ายที่เลือก", target = "_blank", style = "display:none;" })
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
<table id="tabelSectionSix" style="width: 100%;border-style: solid;border-width: 0px 0px 0px 0px; border-collapse: collapse;">

    <tr style="background-color:#2f74b5;color:white;" class="highHeadFooterTable">
