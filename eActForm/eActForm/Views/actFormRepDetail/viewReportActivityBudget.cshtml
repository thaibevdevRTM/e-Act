@model eActForm.Models.ReportActivityBudgetModels

@{
    /**/

    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-xs-12"></div>
    <div class="col-md-4 col-xs-12" style="padding: 0 30px 10px 30px;">
        <div class="text-center">
            <input type="hidden" name="GridHtml" />
            <button type="submit" class="btn ink-reaction btn-success" id="btnSubmitReport" value="Export" style="width:100%;">
                <i class="fa check-square-o"></i>&nbsp;Send to Approve

            </button>
        </div>
    </div>
</div>

<div class="row">
    <div style="text-align: center;">
        บริษัท โมเดิร์นเทรดแมนเนจเม้นท์ จำกัด
    </div>
    <div style="text-align: center;">
        รายละเอียดขออนุมัติงบประมาณจัดกิจกรรมด้านส่งเสริมการขาย
    </div>
    <div class="center">

    </div>
</div>
<div class="row">
    <table id="datatable" border="0" style="text-align:center;font-family:Angsana New;font-size:10pt;" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                <th rowspan="3">ลำดับที่</th>
                <th rowspan="3" width="80px" style="text-align:center;">ชื่อลูกค้า</th>
                <th colspan="1" style="text-align:center;">กลุ่มกิจกรรม</th>
                <th colspan="9" style="text-align:center;">ประมาณการค่าใช้จ่าย</th>
                <th rowspan="3">หมายเหตุ</th>
            </tr>
            <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                <th >14 กลุ่ม</th>
                <th>Est</th>
                <th>Crystal</th>
                <th>Wranger</th>
                <th>100 Plus</th>
                <th>Jubjai</th>
                <th>Oishi</th>
                <th>Soda</th>
                <th>Water</th>
                <th>รวม</th>
            </tr>
        <thead>
        <tbody>
            @{ int countRow = 1;}
            @for (int i = 1; i < Model.activityBudgetList.Count; i++)
            {
                <tr class="gradeX">
                    <td>
                        @i
                    </td>
                    <td>
                        @if (i == 1)
                        {
                            @Model.activityBudgetList[i].customerName
                        }
                        else if (Model.activityBudgetList[i].activityId != Model.activityBudgetList[i - 1].activityId)
                        {
                            @Model.activityBudgetList[i].customerName
                        }

                    </td>
                    <td>
                        @Model.activityBudgetList[i].activitySales
                    </td>
                    <td>
                        @Model.activityBudgetList[i].est
                    </td>
                    <td>
                        @Html.DisplayFor(x => x.activityBudgetList[i].crystal)
                        @*@Model.activityBudgetList[i].crystal*@
                    </td>
                    <td>
                        @Model.activityBudgetList[i].wranger
                    </td>
                    <td>
                        @Model.activityBudgetList[i].plus100
                    </td>
                    <td>
                        @Model.activityBudgetList[i].jubjai
                    </td>
                    <td>
                        @Model.activityBudgetList[i].oishi
                    </td>
                    <td>
                        @Model.activityBudgetList[i].soda
                    </td>
                    <td>
                        @Model.activityBudgetList[i].water
                    </td>
                    <td>
                        @Model.activityBudgetList[i].total
                    </td>
                    <td>
                        @Model.activityBudgetList[i].remark
                    </td>
                </tr>

                if (Model.activityBudgetList[i].activityId != Model.activityBudgetList[i - 1].activityId)
                {
                    countRow++;
                }
            }
        </tbody>

    </table>
</div>

