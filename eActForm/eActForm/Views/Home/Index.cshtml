@model eActForm.Models.SearchActivityModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2>My Document</h2>
<hr />
<div class="row tile_count">

    <div class="row tile_count">
        <div class="col-md-12 col-xs-12">
            @using (Ajax.BeginForm("searchActForm", "Home"
, new AjaxOptions { UpdateTargetId = "getQuery", HttpMethod = "post", OnBegin = "return beginQuery()", OnSuccess = "successQuery", OnFailure = "failureQuery", LoadingElementId = "WaitDialog" }
, new { id = "form", @class = "form-horizontal form-label-left" }))
            {
                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtActivityNo">
                                Act No.
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input type="text" id="txtActivityNo" name="txtActivityNo" class="form-control textboxcss">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                                สถานะ
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.DropDownListFor(model => model.approveStatusList, new SelectList(Model.approveStatusList, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlStatus", Name = "ddlStatus" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="startDate">
                            start date
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input type="text" name="startDate" id="startDate" value="@DateTime.Now.ToString("MM/dd/yyyy")" class="form-control fv">
                        </div>

                    </div>
                    <div class="col-md-6 col-xs-12">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="endDate">
                            end date
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input type="text" name="endDate" id="endDate" value="@DateTime.Now.ToString("MM/dd/yyyy")" class="form-control fv">
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlCustomer">
                                ลูกค้า<span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.DropDownListFor(model => model.customerslist, new SelectList(Model.customerslist, "id", "cusNameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlCustomer", Name = "ddlCustomer" })
                                <input type="hidden" id="txtchanel" class="form-control textboxcss" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlTheme">
                            ประเภทกิจกรรม<span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.activityGroupList, new SelectList(Model.activityGroupList, "id", "activitySales"), "Please Select", new { @class = "form-control textboxcss", id = "ddlTheme", Name = "ddlTheme" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlProductCate">
                                Product category<span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.DropDownListFor(model => model.productcatelist, new SelectList(Model.productcatelist, "id", "cateName"), "Please Select", new { @class = "form-control textboxcss",  id = "ddlProductCate", Name = "ddlProductCate" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="productGroup">
                                Product Group<span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.DropDownListFor(model => model.productGroupList, new SelectList(Model.productGroupList, "id", "groupName"), "Please Select", new { @class = "form-control textboxcss", id = "ddlProductGrp" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success pull-right"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>
                        <a href="#" class="btn btn-info pull-right"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Cancel</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="row tile_count">
    <div id="getQuery" class="col-md-12 col-xs-12">
        @Html.Action("myDoc", "Home")
    </div>
</div>
   

<script type="text/javascript">

    function beginQuery() {
        $("#getQuery").fadeOut(300);
    }

    function successQuery(htmlResponse) {
        $("#getQuery").html(htmlResponse)
        $("#getQuery").fadeIn(300);
    }

    function failureQuery(data) {
        openErrorDialog(data.responseText);
    }

    $(function () {
        $("#startDate").datepicker();
        $("#endDate").datepicker();
    });

</script>