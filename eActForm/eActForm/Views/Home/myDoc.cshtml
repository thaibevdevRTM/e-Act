@model eActForm.Models.Activity_Model.actForms

<a class="btn ink-reaction btn-danger fa fa-trash-o" href="#"></a> คือ Delete
<a class="btn ink-reaction btn-info fa fa-edit" href="#"></a> คือ Edit
<a class="btn ink-reaction btn-default fa fa-search" href="#"></a> คือ View
<a class="btn ink-reaction btn-success fa fa-thumbs-o-up" href="#"></a> คือ Approve

<table id="datatable" class="table table-striped table-hover">
    <thead>
        <tr style="background-color:#2B5D95;color:#ffffff;">
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>Status</th>
            <th>Doc.Date</th>
            <th>Act.No</th>
            <th>Act.Name</th>
            <th>Customer</th>
            <th>Category</th>
            <th>Create Date</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.actLists)
        {
            <tr class="gradeX">
                <td>
                    @Html.ActionLink(" ", "deleteUser", new { id = item.id }, new { onclick = "return confirm('Are you sure you wish to delete this user?');", @class = "btn ink-reaction btn-danger fa fa-trash-o" })
                </td>
                <td>
                    @Html.ActionLink(" ","EditForm", "Activity", new { activityId = item.id } ,new { @class = "btn ink-reaction btn-info fa fa-edit" })
                </td>
                <td>
                    @Html.ActionLink(" ", "deleteUser", new { actId = item.id }, new { onclick = "return confirm('Are you sure you wish to delete this user?');", @class = "btn ink-reaction btn-default fa fa-search" })
                </td>
                <td>
                    @Html.ActionLink(" ", "index","approve", new { actId = item.id }, new {@class = "btn ink-reaction btn-success fa fa-thumbs-o-up" })
                </td>
                <td>@item.statusName</td>
                <td>@{var date = item.documentDate == null ? "" : item.documentDate.Value.ToString("dd/MM/yyyy");} @date </td>
                <td>@item.activityNo</td>
                <td>@item.activityName</td>
                <td>@item.cusShortName</td>
                <td>@item.productCategory</td>
                <td>@{ date = item.createdDate == null ? "" : item.createdDate.Value.ToString("yyyy/MM/dd");} @date</td>
                <td>@item.totalCost</td>
            </tr>
        }
    </tbody>
</table>


<script>
    function onEditData() {
          
            $.ajax({
            url: '@Url.Action("EditForm", "Activity")',
            data: {
                activityId: $("#txtActivityNo").val(),
               
            },
            dataType: "json",
            type: 'POST',
            }).done(function (response) {
            callPreviewData(response.Data.activityModel);
        });
      }
   
</script>