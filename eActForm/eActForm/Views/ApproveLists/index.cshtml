@model eActForm.Models.SearchActivityModels
@{
    ViewBag.Title = "ApproveList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2>Approve Lists</h2>
<hr />
<div class="row tile_count">

    <div class="row tile_count">
        <div class="col-md-12 col-xs-12">
            @using (Ajax.BeginForm("searchActForm", "ApproveLists"
, new AjaxOptions { UpdateTargetId = "getQuery", HttpMethod = "post", OnBegin = "return beginQuery()", OnSuccess = "successQuery", OnFailure = "failureQuery", LoadingElementId = "WaitDialog" }
, new { id = "form", @class = "form-horizontal form-label-left" }))
            {
                <div class="form-group">
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtActivityNo">
                                Act No.
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input type="text" id="txtActivityNo" name="txtActivityNo" class="form-control textboxcss">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class="row">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                                สถานะ
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                @Html.DropDownListFor(model => model.approveStatusList, new SelectList(Model.approveStatusList, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlStatus", Name = "ddlStatus" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success pull-right"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>
                        <a href="#" class="btn btn-info pull-right"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Cancel</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

<div class="row tile_count">
    <div id="getQuery" class="col-md-12 col-xs-12">
        @Html.Action("ListView", "ApproveLists" ,new { })
    </div>
</div>


<script type="text/javascript">

    function beginQuery() {
        if ($("#ddlStatus").val() == "" && $("#txtActivityNo").val() == "") {
            return false;
        }
        $("#getQuery").fadeOut(300);
    }

    function successQuery(htmlResponse) {
        $("#getQuery").html(htmlResponse)
        $("#getQuery").fadeIn(300);
    }

    function failureQuery(data) {
        //(data.responseText);
    }

    $(function () {
        $("#startDate").datepicker();
        $("#endDate").datepicker();
    });

</script>