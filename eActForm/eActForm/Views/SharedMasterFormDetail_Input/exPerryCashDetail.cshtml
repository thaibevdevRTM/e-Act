@using eActForm.BusinessLayer
@using System.Configuration;
@model eActForm.Models.Activity_TBMMKT_Model




<div class="col-lg-12 col-xs-12">

    <div class="col-md-12 col-xs-12">
        <div class="col-md-4 col-xs-12">
            <label class="control-label center">
                ประจำเดือน
            </label>
            @Html.TextBox("activityFormModel.documentDateStr", DocumentsAppCode.convertDateTHToShowCultureDateEN(Model.activityFormModel.documentDate, ConfigurationManager.AppSettings["formatDateUse"])
           , new { @class = "form-control textboxcss", @id = "txtExMonth", Style = "text-align:center;", autocomplete = "off" })
        </div>
        <div class="col-md-4">
            <label class="control-label">
                Doc No.
            </label>
            @Html.TextBoxFor(m => m.activityFormModel.activityNo, new { @class = "form-control textboxcss", Style = "width:5;", @id = "txtActivityNo" })
        </div>
        <div class="col-md-4 col-xs-12">
            <label class="control-label">
                เลขที่เอกสารใบยืมเงินทดลอง
            </label>
            @Html.TextBoxFor(m => m.activityFormTBMMKT.reference, new { @class = "form-control textboxcss", Style = "width:5;", @id = "txtReference" })
        </div>
    </div>
    <div class="col-md-12 col-xs-12">
        <div class="col-md-3 col-xs-12">

        </div>
        <div class="col-md-5">

        </div>
        <div class="col-md-4 col-xs-12">

        </div>
    </div>
</div>



<script type="text/javascript">


    $(function () {
        $("#txtExMonth").datepicker({
            format: 'dd/mm/yyyy'
        });
    });



</script>
