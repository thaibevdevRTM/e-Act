@using eActForm.BusinessLayer;
@model eActForm.Models.Activity_TBMMKT_Model
<div id="divHeaderDetails" runat="server" style="width: 100%;">

    <table style="width: 100%;" id="tabelHeaderDetails" runat="server">


        <tr>
            <td>
                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        วันที่เสนอกิจกรรม :
                    </label>

                    <div class="col-md-10 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.activityFormModel.documentDate, "{0:dd-MM-yyyy}", new { @class = "form-control textboxcss", id = "txtdateDoc", style = "width:320px;" })
                        </div>
                    </div>
                </div>


                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        ชื่อผู้เสนอกิจกรรม :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            <label class="form-control textboxcss" style="width:320px;">@UtilsAppCode.Session.User.empFNameTH  @UtilsAppCode.Session.User.empLNameTH </label>
                        </div>
                    </div>

                    <label class="control-label col-md-2 col-xs-12">
                        เบอร์โทรศัพท์ :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.tB_Act_ActivityForm_DetailOther.activityTel, new { @class = "form-control textboxcss", @id = "txtactivityTel", style = "width:320px;" })
                        </div>
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        สินค้า :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.tB_Act_ActivityForm_DetailOther.activityProduct, new { @class = "form-control textboxcss", @id = "txtactivityProduct", style = "width:320px;" })
                        </div>
                    </div>

                    <label class="control-label col-md-2 col-xs-12">
                        เอกสารเลขที่ :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.activityFormModel.activityNo, new { @class = "form-control textboxcss", @id = "txtActivityNo", @readonly = "readonly", style = "width:320px;" })
                        </div>
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        ชื่อกิจกรรม :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.activityFormModel.activityName, new { @class = "form-control textboxcss", @id = "txtActivityName", style = "width:320px;" })
                        </div>
                    </div>

                    <label class="control-label col-md-2 col-xs-12">
                        EO :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            @Html.TextBoxFor(x => x.tB_Act_ActivityForm_DetailOther.EO, new { @class = "form-control textboxcss", @id = "txtEO", style = "width:320px;" })
                        </div>
                    </div>
                </div>


                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        เริ่มกิจกรรม :
                    </label>

                    <div class="col-md-4 col-xs-12">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-5 col-sm-5 col-xs-12">
                                    <div class="row">
                                        @Html.TextBoxFor(x => x.activityFormModel.activityPeriodSt, "{0:dd-MM-yyyy}", new { @class = "form-control textboxcss", id = "txtdateActivitySt", style = "width:140px;" })

                                    </div>
                                </div>
                                <label class="control-label col-md-1 col-xs-12">
                                    ถึง
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="row">

                                        @Html.TextBoxFor(x => x.activityFormModel.activityPeriodEnd, "{0:dd-MM-yyyy}", new { @class = "form-control textboxcss", id = "txtactivityPeriodEnd", style = "width:140px;" })


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12"></div>
                </div>

                <div class="form-group">

                    <label class="control-label col-md-2 col-xs-12">
                        วัตถุประสงค์ :
                    </label>

                    <div class="col-md-10 col-xs-12">
                        <div class="row">
                            @Html.TextAreaFor(x => x.activityFormModel.objective, new { @class = "form-control textboxcss", @id = "txtObjective" })
                        </div>
                    </div>
            </td>

        </tr>

    </table>

</div>
<script type="text/javascript">

    $(function () {
        $("#txtdateDoc").datepicker({
            format: 'dd-mm-yyyy'
        });
        $("#txtdateActivitySt").datepicker({
            format: 'dd-mm-yyyy'
        });
        $("#txtactivityPeriodEnd").datepicker({
            format: 'dd-mm-yyyy'
        });
    });
</script>