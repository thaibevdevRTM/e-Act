@using System.Configuration;
@model eActForm.Models.ApproveModel.approveModels
@using System.Configuration;

<table class="tablethin" style="text-align:center;" border="1" cellpadding="0" cellspacing="0">
    <tr>

        @foreach (var item in Model.approveFlowDetail)
        {
            if (item.isShowInDoc)
            {
                <td style="width:160px;height:40px;">
                    <div style="font-size:11px;">
                        @item.approveGroupName
                    </div>
                    <div style="font-size:11px;">
                        (@item.approveGroupNameEN)
                    </div>
                </td>
            }
        }
    </tr>

    <tr>
        @{ var index = 0;}
        @foreach (var item in Model.approveFlowDetail)
        {
            if (item.isShowInDoc)
            {
                if (Model.approveDetailLists != null && Model.approveDetailLists.Count > index && Model.approveDetailLists[index].empId == item.empId && Model.approveDetailLists[index].statusId == "3")
                {
                    <td>
                        @if (Model.approveDetailLists[index].signature.Length > 0)
                        {
                            @*var base64 = Convert.ToBase64String(Model.approveDetailLists[index].signature);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src="@imgSrc" class="img-thumbnail" style="text-align:center;margin:auto;" />*@
                            <img width="120" height="80" src="@string.Format(ConfigurationManager.AppSettings["urlGetImg"],@item.empId)"/>
                        }
                    </td>
                }
                else
                {
                    <td>
                        <div style="text-align:center;height:80px;"></div>
                    </td>
                }
            }
            index++;
        }
    </tr>

    <tr>
        @foreach (var item in Model.approveFlowDetail)
        {
            if (item.isShowInDoc)
            {
                <td>
                    <div style="text-align:center; height:20px; margin-top:20px; font-size:11px;">@item.empFNameTH @item.empLNameTH</div>
                </td>
            }
        }
    </tr>
    <tr>
        @foreach (var item in Model.approveFlowDetail)
        {
            if (item.isShowInDoc)
            {
                <td>
                    <div style="text-align:center; height:40px; font-size:11px;">@item.empPositionTitleTH</div>
                </td>
            }
        }
    </tr>

</table>

