@model eActForm.Models.ImportBudgetControlModel

<style>
    table.fixed {
        table-layout: fixed;
        width: 100%;
    }

        table.fixed td {
            overflow: hidden;
        }

    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>


<div class="tab">
    <button class="tablinks" onclick="openCity(event, 'divChanel')">Chanel</button>
    <button class="tablinks" onclick="openCity(event, 'divBrand')">Brand</button>
</div>

<div id="divChanel" class="col-md-12 col-xs-12 tabcontent" style="width:100%;overflow-x:scroll;">
    <table class="table table-striped jambo_table bulk_action fixed" id="tbl_reportChanel" cellpadding="0" cellspacing="0" style="background-color:#ffffff;">
        <thead>
            <tr class="headings" style="text-align:center;">
                <th width="170px" class="center">Bud_Num</th>
                <th width="170px" class="center">B_Code</th>
                <th width="170px" class="center">Bnam_Eng</th>
                <th width="170px" class="center">Type</th>
                <th width="170px" class="center">Brand</th>
                <th width="170px" class="center">Budget_Amount</th>
                <th width="170px" class="center">Activity</th>
                <th width="170px" class="center">Transaction</th>
                <th width="170px" class="center">Budget_Amount2</th>
                <th width="170px" class="center">EO</th>
                <th width="170px" class="center">CommitAmount</th>
                <th width="170px" class="center">Actual</th>
                <th width="170px" class="center">Accrued</th>
                <th width="170px" class="center">Commitment</th>
                <th width="170px" class="center">PR/PO Outstanding</th>
                <th width="170px" class="center">Prepaid</th>
                <th width="170px" class="center">ReturnAmount</th>
                <th width="170px" class="center">BalanceAmount</th>
                <th width="170px" class="center">Remark</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.budgetReportList)
            {
                <tr>
                    <td>@item.budgetNo</td>
                    <td>@item.b_Code</td>
                    <td>@item.chanelName</td>
                    <td>@item.type</td>
                    <td>@item.brandName</td>
                    <td>@string.Format("{0:n2}", @item.budgetAmount)</td>
                    <td>@item.budget_Activity</td>
                    <td>@item.transaction</td>
                    <td>@string.Format("{0:n2}", @item.budget_Amount2)</td>
                    <td>@item.EO</td>
                    <td>@string.Format("{0:n2}", @item.commitAmount)</td>
                    <td>@string.Format("{0:n2}", @item.actual)</td>
                    <td>@string.Format("{0:n2}", @item.accrued)</td>
                    <td>@string.Format("{0:n2}", @item.commitment)</td>
                    <td>@string.Format("{0:n2}", @item.PR_PO)</td>
                    <td>@string.Format("{0:n2}", @item.prepaid)</td>
                    <td>@string.Format("{0:n2}", @item.returnAmount)</td>
                    <td>@string.Format("{0:n2}", @item.balance)</td>
                    <td>@item.remark</td>
                </tr>
            }
        </tbody>
    </table>
</div>





<div class="row form-group">
    <div align="center" class="form-group col-md-3 col-sm-3 col-xs-3 col-md-offset-4" onclick="submmitBtn();">
        <label class="btn ink-reaction btn-success" style="margin-top:20px; font-size:15px; width:100%">Confirm</label>
    </div>
</div>


<script>
    function openCity(evt, cityName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(cityName).style.display = "block";
        evt.currentTarget.className += " active";
    }

    function submmitBtn() {
        $.ajax({
            type: 'POST',
            url:  '@Url.Action("confirmImportBudgetReport", "ImportBudgetControl")',
            data: {
            }
        }).done(function (response) {

        });
    }


</script>