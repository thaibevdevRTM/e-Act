@model eActForm.Models.Activity_TBMMKT_Model
<div id="divHeaderDetails" runat="server" style="width: 100%;padding-left:15px;padding-right:15px;">
    <table style="width: 100%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;" id="tabelHeaderDetails" runat="server">
        <tr style="background-color:#2f74b5;color:white;height:25px;">
            <th style="width: 15%;border-style: solid;border-width: 0px 1px 0px 1px; border-collapse: collapse;text-align:center;">IO</th>
            <th style="width: 50%;border-style: solid;border-width: 0px 1px 0px 0px; border-collapse: collapse;text-align:center;">รายละเอียด</th>
            <th style="width: 5%;border-style: solid;border-width: 0px 1px 0px 0px; border-collapse: collapse;text-align:center;">จำนวน</th>
            <th style="width: 15%;border-style: solid;border-width: 0px 1px 0px 0px; border-collapse: collapse;text-align:center;">ราคาต่อหน่วย(บาท)</th>
            <th style="width: 15%;border-style: solid;border-width: 0px 1px 0px 0px; border-collapse: collapse;text-align:center;">จำนวนเงิน(บาท)</th>
        </tr>
        @{ var index = 0;}
        @foreach (var item in Model.activityOfEstimateList)
        {
            if (item.productDetail != "")
            {
                <tr>
                    <td style="width: 15%;border-style: solid;border-width: 1px 1px 0px 1px; border-collapse: collapse;text-align:center;">
                        @item.IO
                    </td>
                    <td style="width: 50%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:left;padding-left:5px;">
                        @item.productDetail
                    </td>
                    @if (item.unit != 0)
                    {
                        <td style="width: 5%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:center;">
                            @string.Format("{0:#,0}", @item.unit) @item.QtyName
                        </td>
                    }
                    else
                    {
                        <td style="width: 5%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:center;"></td>
                    }

                    @if (item.unitPrice != 0)
                    {
                        <td style="width: 15%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:center;">
                            @item.unitPriceDisplay
                        </td>
                    }
                    else
                    {
                        <td style="width: 15%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:center;"></td>
                    }

                    @if (item.total != 0)
                    {
                        <td style="width: 15%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:right;">
                            @string.Format("{0:#,0.00}", @item.total)
                        </td>
                    }
                    else
                    {
                        <td style="width: 15%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:right;"></td>
                    }
                </tr>
            }
            index++;
        }
        <tr>
            <td colspan="4" style="width: 85%;border-style: solid;border-width: 1px 1px 0px 0px; border-collapse: collapse;text-align:right;">
                จำนวนเงินรวม(บาท)&nbsp;
            </td>
            <td style="width: 15%;border-style: solid;border-width: 1px 1px 1px 0px; border-collapse: collapse;text-align:right;">
                @Model.totalCostThisActivity.Value.ToString("#,##0.00")&nbsp;
            </td>
        </tr>
    </table>
</div>
<table style="width:100%;">
    <tr style="border-bottom:none;">
        <td style="border-style: solid;border-width: 0px 0px 0px 0px; border-collapse: collapse;">
            <div style="height:5px;"></div>
            <div style="width: 100%; text-align: left;">
                หมายเหตุ
                <br />
                @Html.Raw(Model.activityFormTBMMKT.remark.Replace("\n", "<br/>").Replace("\r\n", "<br/>"))
            </div>
        </td>
    </tr>
    <tr>
        <td style="border-style: solid;border-width: 0px 0px 1px 0px; border-collapse: collapse;">
            <div style="height:20px;"></div>
            @RenderPage("~/Views/SharedMasterFormDetail/lastwordForFYI.cshtml")
        </td>
    </tr>
</table>