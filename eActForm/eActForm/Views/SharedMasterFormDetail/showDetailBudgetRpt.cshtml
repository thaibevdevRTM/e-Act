@using eActForm.BusinessLayer;
@model eActForm.Models.Activity_TBMMKT_Model

<div id="divProgress" class="row">
    <br />
    @{ int row = 0; }
    @foreach (var item in Model.budgetTotalList)
    {

        string result = String.Format("{0:n2}", item.amountBalancePercen);
        int intBalance = Convert.ToInt32(item.amountBalancePercen);
        <div class="pro gress_title">
            @if (row == 0)
            {
                if (!string.IsNullOrEmpty(item.brandId))
                {

                    <label class="textboxcss">
                        งบประมาณทั้งปี  @item.totalBudget.Value.ToString("#,##0.00") ใช้ไปสะสม @item.useAmountTotal.Value.ToString("#,##0.00") คงเหลือ @item.amountBalanceTotal.Value.ToString("#,##0.00")
                    </label>

                }
                else
                {
                    <label class="textboxcss">
                        งบประมาณช่องทาง @item.channelName ทั้งปี  @item.totalBudgetChannel.Value.ToString("#,##0.00") ใช้ไปสะสม @item.useAmountTotal.Value.ToString("#,##0.00") คงเหลือ @item.amountBalanceTotal.Value.ToString("#,##0.00")
                    </label>
                }
                <br />
            }

            <span>@item.EO </span> <span>งบ @item.brandName ทั้งปี  @item.amount.Value.ToString("#,##0.00")  ใช้ไปสะสม  @item.useAmount.Value.ToString("#,##0.00")  คงเหลือ  @item.amountBalance.Value.ToString("#,##0.00")</span>

        </div>
        row++;
    }
</div>
