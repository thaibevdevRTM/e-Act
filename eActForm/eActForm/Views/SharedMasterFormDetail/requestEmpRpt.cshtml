@using eActForm.BusinessLayer;
@model eActForm.Models.Activity_TBMMKT_Model
<div id="divRequestEmp" runat="server" style="width: 100%;">
    <table class="tablethin" style="width:100%; text-align:center;" border="1" cellpadding="3" cellspacing="0">

        <tr style="background-color:#E5E2E2;height:25px;  ">
            <td colspan="5" style="text-align :center;">
                <b>Request for permission for the following persons to travel :  รายชื่อผู้ร่วมเดินทางเพิ่มเติม ดังนี้</b>
            </td>
        </tr>
        <tr style="height:25px;">
            <td style="width: 20%;text-align:center;"><b>Name / ชื่อ</b></td>
            <td style="width: 20%;text-align:center;"><b>Position / ตำแหน่ง</b></td>
            <td style="width: 5%;text-align:center;"><b>level</b> </td>
            <td style="width: 20%;text-align:center;"><b>Department  / หน่วยงาน</b></td>
            <td style="width: 25%;text-align:center;"><b>BU / หน่วยธุรกิจ</b></td>
        </tr>
        @{ var index = 0;}
        @for (index = 0; index < Model.requestEmpModel.Count; index++)
        {
            if (@Model.requestEmpModel[@index].empId != "")
            {
                <tr style="height:25px;">
                    <td style="text-align:left; padding-left:5px;">
                        @Model.requestEmpModel[@index].empName
                    </td>
                    <td style="text-align:left; padding-left:5px;">
                        @Model.requestEmpModel[@index].position
                    </td>
                    <td style="text-align:center; padding-left:5px;">
                        @Model.requestEmpModel[@index].level
                    </td>
                    <td style="text-align:left; padding-left:5px;">
                        @Model.requestEmpModel[@index].department
                    </td>
                    <td style="text-align:left; padding-left:5px;">
                        @Model.requestEmpModel[@index].bu
                    </td>
                </tr>
            }
        }
    </table>
</div>
