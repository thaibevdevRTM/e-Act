@model eActForm.Models.Activity_Model
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <div style=""></div>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <div id="Grid" style="width:97%; margin-left:20px;">
                <table id="dtProductDetailLists" class="table table-striped table-hover">
                    <thead>
                        <tr style="background-color:#2B5D95;color:#ffffff;">
                            <th>ชื่อสินค้า (product Name)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.productcostdetaillist1.Any())
                        {
                            foreach (var item in Model.productcostdetaillist1)
                            {
                                foreach (var itemIn in item.detailGroup.OrderBy(x => x.productName))
                                {
                                    <tr class="gradeX">
                                        <td>
                                            @itemIn.productName
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <div>
                <p class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Close</button>
                </p>
            </div>

        </div>
    </div>
</div>