@using System.Globalization;
@using System.Configuration;
@using eActForm.BusinessLayer;
@{
    //==========dev date 20200304 peerapop=====Cookie multi language==========
    if (Request.Cookies[ConfigurationManager.AppSettings["nameCookieLanguageEact"]] == null)
    {
        Response.Cookies[ConfigurationManager.AppSettings["nameCookieLanguageEact"]].Value = ConfigurationManager.AppSettings["cultureThai"];
        Response.Cookies[ConfigurationManager.AppSettings["nameCookieLanguageEact"]].Expires = DateTime.Now.AddDays(365);
    }
    //===END=======dev date 20200304 peerapop=====Cookie multi language==========


    DocumentsAppCode.setCulture(Request.Cookies[ConfigurationManager.AppSettings["nameCookieLanguageEact"]].Value.ToString());
    Layout = "~/Views/Shared/_Layout.cshtml";
}