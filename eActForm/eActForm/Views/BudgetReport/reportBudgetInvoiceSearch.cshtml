
@using eActForm.BusinessLayer;
@using System.Configuration;
@model eActForm.Models.SearchBudgetActivityModels

@Html.HiddenFor(Model => Model.typeForm, new { id = "HtypeForm" })

<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="startDate">
            Start date
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input type="text" name="startDate" id="startDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Today.AddDays(-30), ConfigurationManager.AppSettings["formatDateUse"])" class="form-control fv">
        </div>

    </div>
    <div class="col-md-6 col-xs-12">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="endDate">
            End date
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input type="text" name="endDate" id="endDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now, ConfigurationManager.AppSettings["formatDateUse"])" class="form-control fv">
        </div>

    </div>
</div>


<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlFormType">
                Company
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <select class="form-control" id="ddlFormType" name="ddlFormType">
                    <option>Select All</option>
                    <option>TC</option>
                    <option>MTM</option>
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtKeyword">
                Search
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" id="txtKeyword" name="txtKeyword" class="form-control textboxcss" placeholder="Customer Name, Act no, Invoice No">
            </div>
        </div>
    </div>
</div>


