

@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var typeForm = Request.QueryString["typeForm"];
}


<h2>Price List Report</h2>
<hr />
<div class="row tile_count">

    <div class="row tile_count">
        <div class="col-md-12 col-xs-12">
            @using (Ajax.BeginForm("reportBudgetProductPriceListView", "BudgetReport", typeForm
, new AjaxOptions { UpdateTargetId = "getQuery", HttpMethod = "post", OnBegin = "return beginQuery()", OnSuccess = "successQuery", OnFailure = "failureQuery", LoadingElementId = "WaitDialog" }
, new { id = "form", @class = "form-horizontal form-label-left" }))
            {
                @RenderPage("~/Views/Shared/_searchForBudgetReport.cshtml")
            }
        </div>
    </div>
</div>

<div class="row tile_count">
    <div id="getQuery" class="col-md-12 col-xs-12">
        @Html.Action("reportBudgetProductPriceListView", "BudgetReport", typeForm)
    </div>
</div>

<script type="text/javascript">

    function beginQuery() {
		$("#getQuery").fadeOut(300);
    }

    $(function () {
        //document.getElementById("startDate").disabled = true;
        //document.getElementById("endDate").disabled = true;

        document.getElementById("divdate").style.visibility = "hidden";
        document.getElementById("ddlActYear").disabled = false;

        var x = document.getElementById("ddlActYear");
        x.remove(0);

        //document.getElementById("ddlActYear").selectedIndex = "1";
    });

    function successQuery(htmlResponse) {
        $("#getQuery").html(htmlResponse)
        $("#getQuery").fadeIn(300);
    }

    function failureQuery(data) {
        doMsgFail(data.responseText);
    }

</script>

