@using eActForm.BusinessLayer
@using System.Configuration;
@using eActForm.Models;
@if (UtilsAppCode.Session.User.isApprove || UtilsAppCode.Session.User.isAdmin || UtilsAppCode.Session.User.isSuperAdmin)
{
    <li>
        <a><i class="fa fa-edit"></i> Approve <span class="fa fa-chevron-down"></span></a>
        <ul class="nav child_menu">


            <li>
                @if ((@Array.AsReadOnly(AppCode.compPomForm).Contains(UtilsAppCode.Session.User.empCompanyGroup))
                    || UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_ChangBeer"]
                    || UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_BeerCo"])
                {
                    <a href="@Url.Action("Index", "ApproveBeerLists")">
                        Approve Form Beer
                        @if (UtilsAppCode.Session.User.countWatingActFormBeer != "0")
                        {
                            <span id="txtApproveCount" class='badge bg-green'> @UtilsAppCode.Session.User.countWatingActFormBeer</span>
                        }
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index", "ApproveLists")">
                        Approve Form
                        @if (UtilsAppCode.Session.User.countWatingActForm != "0")
                        {
                            <span id="txtApproveCount" class='badge bg-green'> @UtilsAppCode.Session.User.countWatingActForm</span>
                        }
                    </a>
                }
            </li>

            @if (UtilsAppCode.Session.User.isSuperAdmin
                || (UtilsAppCode.Session.User.isApprove && UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_OMT"]
                || UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_MT"]))
            {
                <li>
                    <a href="@Url.Action("Index", "ApproveListsRepDetail")">
                        Approve Report Detail
                        @if (UtilsAppCode.Session.User.counteatingRepDetail != "0")
                        {
                            <span class='badge bg-green'>@UtilsAppCode.Session.User.counteatingRepDetail</span>
                        }
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "ApproveSummaryDetail")">
                        Approve Summary Report
                        @if (UtilsAppCode.Session.User.counteatingSummaryDetail != "0")
                        {
                            <span class='badge bg-green'>@UtilsAppCode.Session.User.counteatingSummaryDetail</span>
                        }
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "BudgetApproveList")">
                        Budget
                        @if (UtilsAppCode.Session.User.countWatingBudgetForm != "0")
                        {
                            <span class='badge bg-green'>@UtilsAppCode.Session.User.countWatingBudgetForm</span>
                        }
                    </a>
                </li>

            }
        </ul>
    </li>
}