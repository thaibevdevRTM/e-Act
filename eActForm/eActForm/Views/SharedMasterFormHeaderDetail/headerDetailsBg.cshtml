@model eActForm.Models.Activity_TBMMKT_Model
@using System.Globalization;
@{
    CultureInfo DateThai = new CultureInfo("th-TH");
    CultureInfo DateEnglish = new CultureInfo("en-US");
}
<table style="width:100%;">
    <tr>
        <td style="border-width: 0px 0.5px 0px 0.5px; border-collapse: collapse;border-top:none;">
            <div id="divHeaderDetails" runat="server" style="width: 100%;">
                <table style="width: 100%;" id="tabelHeaderDetails" runat="server">
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 0px 0.5px 0px 0.5px; border-collapse: collapse;border-left:none;border-top:none;">
                            &nbsp;วันที่เสนอกิจกรรม
                        </td>
                        <td colspan="3" style="border-style: solid;border-width: 0px 0px 0px 0.5px; border-collapse: collapse;border-right:none;border-top:none;">
                            &nbsp;@Model.activityFormModel.documentDate.Value.ToString("dd/MM/yyyy", DateEnglish)
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0.5px; border-collapse: collapse;border-left:none;">
                            &nbsp;ชื่อผู้เสนอกิจกรรม
                        </td>
                        <td style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;">
                            &nbsp;@Html.DisplayFor(x => x.activityFormTBMMKT.createdByName, new { @class = "", @id = "lblcreatedByName" })
                        </td>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;เบอร์โทรศัพท์
                        </td>
                        <td style="width: 20%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;@Html.DisplayFor(x => x.tB_Act_ActivityForm_DetailOther.activityTel, new { @class = "", @id = "lblcreatedByName" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0.5px; border-collapse: collapse;border-left:none;">
                            &nbsp;สินค้า
                        </td>
                        <td style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;">
                            &nbsp;@Html.DisplayFor(x => x.tB_Act_ActivityForm_DetailOther.activityProduct, new { @class = "", @id = "lblactivityProduct" })
                        </td>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;เอกสารเลขที่
                        </td>
                        <td style="width: 20%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;@Html.DisplayFor(x => x.activityFormModel.activityNo, new { @class = "", @id = "lblactivityNo" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0.5px; border-collapse: collapse;border-left:none;vertical-align:top;">
                            &nbsp;ชื่อกิจกรรม
                        </td>
                        <td style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;vertical-align:top;">
                            &nbsp;ขออนุมัติงบประมาณกิจกรรม @Html.DisplayFor(x => x.activityFormModel.activityName, new { @class = "", @id = "lblActivityName" })
                        </td>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;vertical-align:top;">
                            &nbsp;EO
                        </td>
                        <td style="width: 20%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;vertical-align:top;">
                            @*&nbsp;@Html.DisplayFor(x => x.tB_Act_ActivityForm_DetailOther.EO, new { @class = "", @id = "lblEO" })*@
                            @{ var indexEO = 0; }
                            @foreach (var itemGetEO in Model.listEoInDoc)
                            {
                                @:&nbsp;@itemGetEO
                                if (indexEO > 0)
                                {
                                    @:<br />
                                }
                                indexEO++;
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0.5px; border-collapse: collapse;border-left:none;border-bottom:none;">
                            &nbsp;เริ่มกิจกรรม
                        </td>
                        <td style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;border-bottom:none;">
                            &nbsp;@Model.activityFormModel.activityPeriodSt.Value.ToString("dd/MM/yyyy", DateEnglish) &nbsp;ถึง&nbsp;@Model.activityFormModel.activityPeriodEnd.Value.ToString("dd/MM/yyyy", DateEnglish)
                        </td>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;Budget Number
                        </td>
                        <td style="width: 20%;border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-right:none;border-left:none;">
                            &nbsp;@Html.DisplayFor(x => x.tB_Act_ActivityForm_DetailOther.BudgetNumber, new { @class = "", @id = "lblBudgetNumber" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0px; border-collapse: collapse;border-left:none;border-bottom:none;vertical-align:top;">
                            &nbsp;วัตถุประสงค์
                        </td>
                        <td colspan="3" style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;border-bottom:none;">
                            @Html.Raw(Model.activityFormModel.objective.Replace("\n", "<br/>").Replace("\r\n", "<br/>"))
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 15%;border-style: solid;border-width: 1px 0.5px 0px 0px; border-collapse: collapse;border-left:none;border-bottom:none;vertical-align:top;">
                            &nbsp;เอกสารแนบ
                        </td>
                        <td colspan="3" style="width: 50%;border-style: solid;border-width: 1px 0px 0px 0.5px; border-collapse: collapse;border-right:none;border-bottom:none;">
                            @Html.Raw(Model.tB_Act_ActivityForm_DetailOther.descAttach.Replace("\n", "<br/>").Replace("\r\n", "<br/>"))
                        </td>
                    </tr>
                </table>

            </div>
        </td>
    </tr>
</table>
<table style="width:100%;">
    <tr>
        <td style="border-style: solid;border-width: 1px 0px 0px 0px; border-collapse: collapse;border-bottom:none;border-left:none;border-right:none;">
            <div style="height:5px;"></div>
            <div style="width: 100%; text-align: left;">
                &nbsp;ค่าใช้จ่ายในการทำกิจกรรม @Html.DisplayFor(x => x.activityFormModel.activityName, new { @class = "", @id = "lblActivityName" }) จำนวนเงิน @Model.totalCostThisActivity.Value.ToString("#,###.00") บาท
                <br />
                &nbsp;รายละเอียดงบประมาณ
            </div>
        </td>
    </tr>
</table>
