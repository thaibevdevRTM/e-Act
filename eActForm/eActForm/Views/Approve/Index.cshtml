@using eActForm.BusinessLayer;
@model eActForm.Models.ApproveModel.approveModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var actId = Request.QueryString["actId"];
}

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2>การอนุมัติ</h2>
<hr />
<div class="row">
    <div class="col-md-4 col-xs-12">
        <h3>ประวัติการอนุมัติ</h3>
        <hr />
        @Html.Action("approveLists", "Approve", Model)
    </div>
    <div class="col-md-8 col-xs-12">
        <h3>เอกสารขออนุมัติ</h3>
        <hr />
        @Html.Action("activityPDFView", "ActivityViewer", new { actId = actId })

        @using (Ajax.BeginForm("insertApprove", "Approve"
, new AjaxOptions { UpdateTargetId = "getQuery", HttpMethod = "post", OnBegin = "return beginQuery()", OnSuccess = "successQuery", OnFailure = "failureQuery", LoadingElementId = "WaitDialog" }
, new { id = "form", @class = "form-horizontal form-label-left" }))
        {
            <h3>อนุมัติ</h3>
            <hr />
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                            เหตุผล(เพิ่มเติม)
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <textarea name="txtRemark" id="txtRemark" class="form-control" placeholder="เหตุผล(เพิ่มเติม)" rows="5" cols="50"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                            สถานะ
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input type="hidden" id="lblActFormId" name="lblActFormId" value="@actId" />
                            @if (Model.approveModel != null)
                            {
                                <input type="hidden" id="lblApproveId" name="lblApproveId" value="@Model.approveModel.id" />
                            }
                            @Html.DropDownListFor(model => model.approveStatusLists, new SelectList(Model.approveStatusLists, "id", "nameTH"), "-Selected-", new { @class = "form-control", required = "required", id = "ddlStatus" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <div class="row">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="currentSignature">
                            ลายเซ็นปัจจุบัน
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.Action("currentSignature", "Signature", new { empId = UtilsAppCode.Session.User.empId })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-xs-12">

                @*@if (Model.approveModel == null || Model.approveModel.isPermisionApprove)
        {*@
                <button type="submit" class="btn btn-success pull-right"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>
                @*<button type="button" class="btn btn-success pull-right" onclick="validatesubmit()"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>*@
                <a href="@Url.Action("index", "home")" class="btn btn-info pull-right"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Cancel</a>
                @*}
        else
        {
            <p class="text-danger text-center">
                คุณไม่สามารถอนุมัติเอกสารฉบับนี้ได้<br />
                เนื่องจากไม่มีรายชื่ออยู่ในการอนุมัติ<br />
                @Html.ActionLink(" สอบถามข้อมูลเพิ่มเติม Click ", "contact", "home")
            </p>
        }*@
            </div>
        }
    </div>
</div>

<div class="modal fade" id="ModalPreviewPDF" style="display:none">
    <div id="divPreviewApprove">
        @Html.Action("previewApprove", "Approve")
    </div>
</div>

<script>
    function beginQuery() {

       

        $(".fv").each(function () {
            var v = $(this).val();
            if (v == '') {
                $(this).focus();
            }
        });

        $("#getQuery").fadeOut(300);
    }

    function successQuery() {
       
        callPreviewApprove('@actId');
        genPdf();
        //bootbox.alert({
        //    message: "ดำเนินการเรียบร้อยครับ",
        //    className: "my-bootbox-class",
        //    callback: function () {

        //    }
        //})
    }

    function failureQuery(data) {
        openErrorDialog(data.responseText);
    }


    function callPreviewApprove(obj) {
        console.log("iiiiiiiiiiiiiiiiiii" + obj);
        $.ajax({
            type: 'POST',
            url:  '@Url.Action("previewApprove", "Approve")',
            data: {
                actId: obj
            }
        }).done(function (htmlResponse) {
            $("#divPreviewApprove").html(htmlResponse)
            $('#ModalPreviewPDF').modal('show');
        });
    }

</script>


