<script>

    onchangeCustomer();


    function onchangeCustomer() {
         $("#txtcustomers").val('');
         $.ajax({
                url: '@Url.Action("getChanel", "eAct")',
                data: {
                    Id: $("#ddlCustomer").val(),
                },
                dataType: "json",
                type: 'POST',
                success: function (response) {
                 $("#txtcustomers").val(response.Data.Chanel_group);

             }
         });
    }

</script>