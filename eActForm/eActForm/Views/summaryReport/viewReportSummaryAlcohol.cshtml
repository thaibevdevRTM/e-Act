
@model eActForm.Models.ReportSummaryModels

<div class="modal-dialog modal-large">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <div style=""></div>
            <div>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
        </div>
        <div class="modal-body">
            <div id="Grid" style="width:97%; margin-left:20px;">
                <div class="row">
                    <div style="text-align: center;">
                        บริษัท โมเดิร์นเทรดแมนเนจเม้นท์ จำกัด
                    </div>
                    <div style="text-align: center;">
                        รายละเอียดขออนุมัติงบประมาณจัดกิจกรรมด้านส่งเสริมการขาย
                    </div>
                    <div style="text-align: center;">
                        ประจำเดือน @ViewBag.MouthText
                    </div>
                </div>
                <div class="row">

                    <table id="datatable1" border="0" style="width:100%; text-align:center;font-family:Angsana New;font-size:10pt;" class="table table-striped table-bordered dt-responsive nowrap">
                        <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                            <th rowspan="2">ลำดับที่</th>
                            <th colspan="1" style="text-align:center;">กลุ่มกิจกรรม</th>
                            <th colspan="11" style="text-align:center;">ประมาณการค่าใช้จ่าย</th>
                            <th rowspan="2">หมายเหตุ</th>
                        </tr>
                        <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                            <th>14 กลุ่ม</th>
                            <th>Beer</th>
                            <th>ChangClassic</th>
                            <th>Federbrau</th>
                            <th>Archa</th>
                            <th>Whitespirits</th>
                            <th>Brownspirits</th>
                            <th>Hongthong</th>
                            <th>Blend285</th>
                            <th>Sangsom</th>
                            <th>Readytodrink</th>
                            <th>รวม</th>
                        </tr>
                        <tbody>
                            @{ int countRowAct = 1;
                                string activitySales = "";
                                decimal? sumBeer = 0;
                                decimal? sumChangClassic = 0;
                                decimal? sumFederbrau = 0;
                                decimal? sumArcha = 0;
                                decimal? sumWhitespirits = 0;
                                decimal? sumBrownspirits = 0;
                                decimal? sumHongthong = 0;
                                decimal? sumBlend285 = 0;
                                decimal? sumSangSom = 0;
                                decimal? sumReadytodrink = 0;
                                decimal? totalAct = 0; }
                            @for (int i = 0; i < Model.activitySummaryGroupActivityList.Count; i++)
                            {
                                <tr class="gradeX">
                                    <td>
                                        @countRowAct
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].activitySales)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].beer)
                                        @{
                                            sumBeer = Model.activitySummaryGroupActivityList[i].beer + sumBeer;
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].changclassic)
                                        @{
                                            sumChangClassic = Model.activitySummaryGroupActivityList[i].changclassic + sumChangClassic;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].federbrau)
                                        @{
                                            sumFederbrau = Model.activitySummaryGroupActivityList[i].federbrau + sumFederbrau;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].archa)
                                        @{
                                            sumArcha = Model.activitySummaryGroupActivityList[i].archa + sumArcha;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].whitespirits)
                                        @{
                                            sumWhitespirits = Model.activitySummaryGroupActivityList[i].whitespirits + sumWhitespirits;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].brownspirits)
                                        @{
                                            sumBrownspirits = Model.activitySummaryGroupActivityList[i].brownspirits + sumBrownspirits;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].hongthong)
                                        @{
                                            sumHongthong = Model.activitySummaryGroupActivityList[i].hongthong + sumHongthong;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].blend285)
                                        @{
                                            sumBlend285 = Model.activitySummaryGroupActivityList[i].blend285 + sumBlend285;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].sangsom)
                                        @{
                                            sumSangSom = Model.activitySummaryGroupActivityList[i].sangsom + sumSangSom;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => x.activitySummaryGroupActivityList[i].readytodrink)
                                        @{
                                            sumReadytodrink = Model.activitySummaryGroupActivityList[i].readytodrink + sumReadytodrink;
                                        }
                                    </td>
                                    <td>
                                        @{
                                            
                                            totalAct = Model.activitySummaryGroupActivityList[i].beer +
                                                    Model.activitySummaryGroupActivityList[i].changclassic +
                                                    Model.activitySummaryGroupActivityList[i].federbrau +
                                                    Model.activitySummaryGroupActivityList[i].archa +
                                                    Model.activitySummaryGroupActivityList[i].whitespirits +
                                                    Model.activitySummaryGroupActivityList[i].brownspirits +
                                                    Model.activitySummaryGroupActivityList[i].hongthong +
                                                    Model.activitySummaryGroupActivityList[i].blend285 +
                                                    Model.activitySummaryGroupActivityList[i].sangsom +
                                                    Model.activitySummaryGroupActivityList[i].readytodrink;

                                            string sumActTotal = String.Format("{0:n2}", @totalAct);
                                            @sumActTotal.ToString();

                                        }
                                    </td>
                                    <td>
                                        @Model.activitySummaryGroupActivityList[i].remark
                                    </td>

                                </tr>

                                if (activitySales != Model.activitySummaryGroupActivityList[i].activitySales)
                                {
                                    countRowAct++;

                                }
                            }
                            
                        </tbody>




                    </table>
                </div>

                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="pull-right" style="margin-right:10px;">
                            @if (Model.activitySummaryGroupList != null && Model.activitySummaryGroupList.Count > 0)
                            {
                                @Html.Action("approvePositionSignature", "actFormRepDetail", new { flowModel = Model.flowList })
                            }
                        </div>
                    </div>
                </div>

                <div style="page-break-before:always">&nbsp;</div>

                <div class="row">
                    <div style="text-align: center;">
                        บริษัท โมเดิร์นเทรดแมนเนจเม้นท์ จำกัด
                    </div>
                    <div style="text-align: center;">
                        รายละเอียดขออนุมัติงบประมาณจัดกิจกรรมด้านส่งเสริมการขาย
                    </div>
                    <div style="text-align: center;">
                        ประจำเดือน @ViewBag.MouthText
                    </div>
                </div>

                <div class="row">
                    <table id="datatable2" border="0" style="width:100%; text-align:center;font-family:Angsana New;font-size:10pt;" class="table table-striped table-bordered dt-responsive nowrap">
                        <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                            <th rowspan="2">ลำดับที่</th>
                            <th rowspan="2" width="80px" style="text-align:center;">ชื่อลูกค้า</th>
                            <th colspan="1" style="text-align:center;">กลุ่มกิจกรรม</th>
                            <th colspan="11" style="text-align:center;">ประมาณการค่าใช้จ่าย</th>
                            <th rowspan="2">หมายเหตุ</th>
                        </tr>
                        <tr style="background-color:#2B5D95;color:#ffffff;text-align:center;">
                            <th>14 กลุ่ม</th>
                            <th>Beer</th>
                            <th>ChangClassic</th>
                            <th>Federbrau</th>
                            <th>Archa</th>
                            <th>Whitespirits</th>
                            <th>Brownspirits</th>
                            <th>Hongthong</th>
                            <th>Blend285</th>
                            <th>Sangsom</th>
                            <th>Readytodrink</th>
                            <th>รวม</th>
                        </tr>
                        <tbody>
                            @{ int countRow = 1;
                                string customer = "";
                            }

                            @foreach (var item in Model.activitySummaryGroupList)
                            {

                            <tr class="gradeX">
                                <td>
                                    @if (customer != item.customerName)
                                    {
                                        @countRow
                                        countRow++;
                                    }
                                </td>
                                <td>
                                    @if (customer != item.customerName)
                                    {
                                        @item.customerName
                                        customer = item.customerName;
                                    }
                                </td>
                                <td>
                                    @item.activitySales
                                </td>
                                <td>
                                    @{
                                        string sumAGbeer = String.Format("{0:n2}", @item.beer);
                                        @sumAGbeer.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGchangclassic = String.Format("{0:n2}", @item.changclassic);
                                        @sumAGchangclassic.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGfederbrau = String.Format("{0:n2}", @item.federbrau);
                                        @sumAGfederbrau.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGarcha = String.Format("{0:n2}", @item.archa);
                                        @sumAGarcha.ToString();
                                    }

                                </td>
                                <td>
                                    @{
                                        string sumAGwhitespirits = String.Format("{0:n2}", @item.whitespirits);
                                        @sumAGwhitespirits.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGbrownspirits = String.Format("{0:n2}", @item.brownspirits);
                                        @sumAGbrownspirits.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGhongthong = String.Format("{0:n2}", @item.hongthong);
                                        @sumAGhongthong.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGblend285 = String.Format("{0:n2}", @item.blend285);
                                        @sumAGblend285.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGsangsom = String.Format("{0:n2}", @item.sangsom);
                                        @sumAGsangsom.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        string sumAGreadytodrink = String.Format("{0:n2}", @item.readytodrink);
                                        @sumAGreadytodrink.ToString();
                                    }
                                </td>
                                <td>
                                    @{
                                        decimal? total = 0;
                                        total = item.beer +
                                                item.changclassic +
                                                item.federbrau +
                                                item.archa +
                                                item.whitespirits +
                                                item.brownspirits +
                                                item.hongthong +
                                                item.blend285 +
                                                item.sangsom +
                                                item.readytodrink;

                                        string result = String.Format("{0:n2}", @total);
                                        @result.ToString();

                                    }
                                </td>
                                <td>
                                    @item.remark
                                </td>

                            </tr>

                                //if (customer != Model.activitySummaryGroupList[i].customerName)
                                //{
                                //    countRow++;
                                //    customer = Model.activitySummaryGroupList[i].customerName;
                                //}

                            }
                        </tbody>

                    </table>
                </div>
            </div>


            <div class="row">
                <div class="col-md-4 col-xs-12"></div>
                <div class="col-md-4 col-xs-12" style="padding: 0 30px 10px 30px;">
                    <div class="text-center">
                        <input type="hidden" name="GridHtml" />
                        <button type="submit" class="btn ink-reaction btn-success" id="btnSubmitReport" value="Export" style="width:100%;">
                            <i class="fa check-square-o"></i>&nbsp;Send to Approve

                        </button>
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="pull-left">
                        @using (Html.BeginForm("repListViewExportExcel", "actFormRepDetail", FormMethod.Post))
                        {
                            <input type="hidden" name="gridHtml" />
                            <button type="submit" class="btn ink-reaction btn-success" id="btnExportExcel" value="ExportExcel">
                                <i class="fa fa-file-excel-o"></i>&nbsp;Export To Excel
                            </button>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $(function () {
            $("#btnExportExcel").click(function () {
                $("input[name='gridHtml']").val($("#Grid").html());
            });
        });


                $("#btnSubmitReport").click(function () {
                    $("#previewModal").modal('hide');
                    $("#WaitDialog").show();
                    bootbox.dialog({ message: '<div class="text-center"><i class="fa fa-spin fa-spinner"></i> Loading...</div>' })
                    $.ajax({
                        url: '@Url.Action("repReportSummaryApprove", "SummaryReport")',
                        data: {
                            gridHtml: $("#Grid").html(),
                            customerId: $("#ddlCustomer").val(),
                            productTypeId: $("#ddlProductType").val(),
                            startDate: $("#startDate").val(),
                            endDate: $("#endDate").val()
                        },
                        dataType: "json",
                        type: 'POST'
                    }).done(function (response) {
                        $("#WaitDialog").hide();
                        bootbox.hideAll();
                        if (response.Success) {
                            $('#previewSummaryModal').modal('toggle');
                            $("#chooseSummaryView").html("");
                            doMsgSuccess("ดำเนินการเรียบร้อยครับ");

                            }
                            else {
                            doMsgFail("ไม่สามารถดำเนินการได้สำเร็จ กรุณาติดต่อ Admin ครับ");
                        }
                    });


                });
            });
</script>