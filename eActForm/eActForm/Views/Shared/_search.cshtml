@using eActForm.BusinessLayer;
@using System.Configuration;
@model eActForm.Models.SearchActivityModels

<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtActivityNo">
                Act No.
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" id="txtActivityNo" name="txtActivityNo" class="form-control textboxcss">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                Status
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.approveStatusList, new SelectList(Model.approveStatusList, "id", @Resources.Global.dropdownStatus), "Please Select", new { @class = "form-control textboxcss", id = "ddlStatus", Name = "ddlStatus" })
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="startDate">
                Start date
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" name="startDate" id="startDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now.AddDays(-7), ConfigurationManager.AppSettings["formatDateUse"])" class="form-control">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="endDate">
            End date
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input type="text" name="endDate" id="endDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now, ConfigurationManager.AppSettings["formatDateUse"])" class="form-control">
        </div>

    </div>

</div>



@if (UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_TBM"])
{
    <div class="form-group">
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlDocument">
                    Document Type
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.masterTypeFormList, new SelectList(Model.masterTypeFormList, "id", "nameForm"), "Please Select",
                   new
                        {
                       @class = "form-control",
                            id = "ddlMasterType",
                            Name = "ddlMasterType",
                            multiple = "multiple"
                            
                   })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlDepartment">
                Department
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.departmentList, new SelectList(Model.departmentList, "val1", "displayVal"), "Please Select", new { @class = "form-control", id = "ddlDepartment", Name = "ddlDepartment" })
            </div>
        </div>

    </div>
    <div class="form-group">

        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlChannel">
                    Channel
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.channelList, new SelectList(Model.channelList, "id", "chanelGroup"), "Please Select", new { @class = "form-control", id = "ddlChannel", Name = "ddlChannel" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlBrand">
                Brand
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.productBrandList, new SelectList(Model.productBrandList, "id", "brandName"), "Please Select", new { @class = "form-control", id = "ddlbrand", Name = "ddlbrand" })
            </div>
        </div>

    </div>
}

@if (UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_MT"] || UtilsAppCode.Session.User.empCompanyId == ConfigurationManager.AppSettings["companyId_OMT"])
{
    <div class="form-group">
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlCustomer">
                    Customer<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.customerslist, new SelectList(Model.customerslist, "id", "cusNameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlCustomer", Name = "ddlCustomer" })
                    <input type="hidden" id="txtchanel" class="form-control textboxcss" readonly>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlTheme">
                Activity Type<span class="required"></span>
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.activityGroupList, new SelectList(Model.activityGroupList, "id", "activitySales"), "Please Select", new { @class = "form-control textboxcss", id = "ddlTheme", Name = "ddlTheme" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlProductCate">
                    Product Type<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.productTypelist, new SelectList(Model.productTypelist, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlProductType", Name = "ddlProductType" })
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="productGroup">
                    Product Group<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.productGroupList, new SelectList(Model.productGroupList, "id", "groupName"), "Please Select", new { @class = "form-control textboxcss", id = "ddlProductGrp", Name = "ddlProductGrp" })
                </div>
            </div>
        </div>
    </div>
}

<hr />
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <a href="#" class="btn btn-warning"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Cancel</a>
                <button type="submit" class="btn btn-success"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>
            </div>
        </div>
    </div>
</div>


<style>
    td div span {
        line-height: 0px;
    }

    .multiselect-container {
        width: 100% !important;
        overflow-x: auto;
        overflow-y: hidden;

    }
    .btn{
        text-align:left;
    }

</style>

<script>

    $(document).ready(function () {
        $('#ddlMasterType').multiselect({
            numberDisplayed: 1,
            enableFiltering: true,
            nonSelectedText: '',
            buttonWidth: '100%',
            onChange: function (option, checked) {
            
            },
        });


        $(".multiselect .caret").css('float', 'right');
        $(".multiselect .caret").css('margin', '8px 0');
    });

    $(function () {
        $("#startDate").datepicker({ format: '@ConfigurationManager.AppSettings["formatDateUseJquery"]' });
        $("#endDate").datepicker({ format: '@ConfigurationManager.AppSettings["formatDateUseJquery"]' });
    });


</script>


