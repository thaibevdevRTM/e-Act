@using eActForm.BusinessLayer;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>e-ActForm T&D Sale Support</title>


    @Styles.Render("~/Content/themes/base/css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")


</head>
<body class="nav-md">
    <div id="WaitDialog" class="loading" style="text-align: center;display:none;">
        <img src="~/images/loading.gif" style="margin-top:100px;width:100px;height:100px;" />
        <div style="margin-top: 10px; color: white">
            <b>Please wait</b>
        </div>
    </div>
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="" class="site_title">
                            <img src="~/images/LogoTD_Department.png" class="profile_img" width="30px" />
                            <span>T&D Sale Support</span>
                        </a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            @{
                                var src = "http://webapp8.apps.thaibev.com/files/eCheck/Photos/" + @UtilsAppCode.Session.User.empId + ".jpg";
                            }
                            <img src=@src alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@UtilsAppCode.Session.User.empFNameTH  @UtilsAppCode.Session.User.empLNameTH</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    @RenderPage("_sidebar.cshtml")
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="@Url.Action("logOut","home")">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            @RenderPage("_topnav.cshtml")
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Power by T&D Dev. Team
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>





    @Scripts.Render("~/bundles/jqueryui", "~/bundles/jqueryval", "~/bundles/bootstrap")

    <script src="~/Content/vendors/build/js/custom.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)

    <style type="text/css" async>

        .textRight {
            text-align: right;
        }

        .inputFull {
            width: 100%;
        }

        .my-bootbox-class .modal-dialog {
            width: 400px;
            font-size: 18px;
            text-align: center;
        }

        .my-bootbox-class .modal-dialog-large {
            width: 600px;
            font-size: 18px;
            text-align: center;
        }

        .loading {
            position: fixed;
            z-index: 999;
            height: 2em;
            width: 2em;
            overflow: show;
            margin: auto;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            background-color: rgba(0,0,0,0.5); /* Black w/ opacity */
            width: 100%;
            height: 100%;
        }

        .sizeFont15 {
            font-size:15px;
        }
    </style>

    <script>


        $(document).ready(function () {

            if ('@UtilsAppCode.Session.User.isApprove' == 'True' && '@UtilsAppCode.Session.User.countApproveReject' != '0') {

                (new PNotify({
                    title: 'แจ้งเตือน',
                    text: 'เอกสารที่คุณ"อนุมัติ"ไม่ได้รับการอนุมัติ <br/>จำนวน ' + '@UtilsAppCode.Session.User.countApproveReject' +' รายการ',

                    hide: false,
                    styling: 'bootstrap3',
                    addclass: "sizeFont15",
                }));
            }

            if ('@UtilsAppCode.Session.User.isCreator' == 'True' && '@UtilsAppCode.Session.User.countRejectAct' != '0') {
                (new PNotify({
                    title: 'แจ้งเตือน' ,
                    text: 'คุณมีเอกสารไม่รับการอนุมัติ <br/>จำนวน '+'@UtilsAppCode.Session.User.countRejectAct' +' รายการ',
                    hide: false,
                    styling: 'bootstrap3',
                    addclass: "sizeFont15",
                }));
            }
        });



        function doMsgSuccess(msg) {
            bootbox.alert("<div class='row'><div class='text-center'><img width='150px' src='images/checkmark.gif' class='text-center'/><br/>" + msg + "</div></div>");
        }
        function doMsgFail(msg) {
            bootbox.alert("<div class='row'><div class='text-center'><br/>" + msg + "</div></div>");
        }

        function doLoading(msg) {
            bootbox.dialog({ message: '<div class="text-center"><i class="fa fa-spin fa-spinner"></i>' + msg + '</div>' })
        }

        function doAlert(msg) {
            bootbox.dialog({
                message: "<div class='row'><div class='text-center'><img width='80px' src='../images/warning_error.png' class='text - center'/><br/>" + msg + "</div></div>"
            });
            closeButton: false
        }

        function doMsgSuccessAction(msg, action) {
            bootbox.alert({
                message: "<div class='row'><div class='text-center'><img width='150px' src='~/images/checkmark.gif' class='text-center'/><br/>" + msg + "</div></div>",
                callback: function () {
                    var url = action;
                    window.location.href = url;
                }
            });
        }



    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script src="https://www.googletagmanager.com/gtag/js?id=UA-138769477-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-138769477-1');
    </script>
</body>
</html>
