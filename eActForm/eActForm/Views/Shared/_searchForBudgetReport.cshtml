@using eActForm.BusinessLayer;
@using System.Configuration;
@model eActForm.Models.SearchBudgetActivityModels

@Html.HiddenFor(Model => Model.typeForm, new { id = "HtypeForm" })

<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtActivityNo">
                Act No.
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" id="txtActivityNo" name="txtActivityNo" class="form-control textboxcss">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                Status
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.approveStatusList, new SelectList(Model.approveStatusList, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlStatus", Name = "ddlStatus" })
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlActYear">
                Year
            </label>

            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.activityYearlist, new SelectList(Model.activityYearlist, "activityYear", "activityYear"), "Please Select", new { @disabled = "disabled", @class = "form-control textboxcss", id = "ddlActYear", Name = "ddlActYear" })
                <input type="hidden" id="txtActYear" class="form-control textboxcss" readonly>
            </div>

        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="row">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlProductCate">
                Budget Status<span class="required"></span>
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.budgetStstuslist, new SelectList(Model.budgetStstuslist, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlBudgetStatus", Name = "ddlBudgetStatus" })
            </div>
        </div>
    </div>
</div>


<div class="form-group">
    <div class="col-md-6 col-xs-12">

    </div>
</div>

<div id="divdate" class="form-group">
    <div id="divstartdate" class="col-md-6 col-xs-12">
        <label id="lblstartDate" class="control-label col-md-3 col-sm-3 col-xs-12" for="startDate">
            Start date
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <input type="text" name="startDate" id="startDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now.AddDays(-45), ConfigurationManager.AppSettings["formatDateMMddyyyy"])" class="form-control fv">
        </div>

    </div>
    <div id="divenddate" class="col-md-6 col-xs-12">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="endDate">
            End date
        </label>
        <div class="col-md-9 col-sm- col-xs-12">
            <input type="text" name="endDate" id="endDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now, ConfigurationManager.AppSettings["formatDateMMddyyyy"])" class="form-control fv">
        </div>
    </div>
</div>



