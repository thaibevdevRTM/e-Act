                    @Html.DropDownListFor(model => model.budgetStstuslist, new SelectList(Model.budgetStstuslist, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlBudgetStatus", Name = "ddlBudgetStatus" })
                </div>
            </div>*@
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="row">
                @*<label class="control-label col-md-3 col-sm-3 col-xs-12" for="productGroup">
