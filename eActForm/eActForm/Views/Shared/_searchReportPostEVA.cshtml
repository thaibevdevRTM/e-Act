@model eActForm.Models.SearchActivityModels
@using eActForm.BusinessLayer
@using System.Configuration;

<script src="~/Scripts/bootstrap-select.min.js"></script>

<div class="form-group">
    @if (Model.showUIModel != null && Model.showUIModel.isShowActNo)
    {
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtActivityNo">
                    Act No.
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" id="txtActivityNo" name="txtActivityNo" class="form-control textboxcss">
                </div>
            </div>
        </div>
    }
    @if (Model.showUIModel != null && Model.showUIModel.isShowStatus)
    {

        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlStatus">
                    Status
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.approveStatusList, new SelectList(Model.approveStatusList, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss", id = "ddlStatus", Name = "ddlStatus" })
                </div>
            </div>
        </div>
    }
</div>
@if (Model.showUIModel != null && Model.showUIModel.isShowDate)
{
    <div class="form-group">
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="startDate">
                Start date
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" name="startDate" id="startDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now.AddDays(-15), ConfigurationManager.AppSettings["formatDateMMddyyyy"])" class="form-control fv">
            </div>

        </div>
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="endDate">
                End date
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <input type="text" name="endDate" id="endDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(DateTime.Now, ConfigurationManager.AppSettings["formatDateMMddyyyy"])" class="form-control fv">
            </div>

        </div>
    </div>
}
<div class="form-group">
    @if (Model.showUIModel != null && Model.showUIModel.isShowCustomer)
    {
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlCustomer">
                    Customer<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.customerslist, new SelectList(Model.customerslist, "id", "cusNameTH"), "Please Select", new { @class = "form-control textboxcss selectpicker", id = "ddlCustomer", Name = "ddlCustomer" })
                    <input type="hidden" id="txtchanel" class="form-control textboxcss" readonly>
                </div>
            </div>
        </div>
    }
    @if (Model.showUIModel != null && Model.showUIModel.isShowActType)
    {
        <div class="col-md-6 col-xs-12">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlTheme">
                Activity Type<span class="required"></span>
            </label>
            <div class="col-md-9 col-sm-9 col-xs-12">
                @Html.DropDownListFor(model => model.activityGroupList, new SelectList(Model.activityGroupList, "id", "activitySales"), "Please Select", new { @class = "form-control textboxcss selectpicker", id = "ddlTheme", Name = "ddlTheme" })
            </div>
        </div>
    }
</div>

<div class="form-group">
    @if (Model.showUIModel != null && Model.showUIModel.isShowProductType)
    {
        <div class="col-md-6 col-xs-12 hidden">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlProductCate">
                    Product Type<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.productTypelist, new SelectList(Model.productTypelist, "id", "nameTH"), "Please Select", new { @class = "form-control textboxcss selectpicker", id = "ddlProductType", Name = "ddlProductType" })
                </div>
            </div>
        </div>
    }
    @if (Model.showUIModel != null && Model.showUIModel.isShowProductGroup)
    {
        <div class="col-md-6 col-xs-12 hidden">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="productGroup">
                    Product Group<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.productGroupList, new SelectList(Model.productGroupList, "id", "groupName"), "Please Select", new { @class = "form-control textboxcss selectpicker", id = "ddlProductGrp", Name = "ddlProductGrp" })
                </div>
            </div>
        </div>
    }

</div>

<div class="form-group">
    @if (Model.showUIModel != null && Model.showUIModel.isShowProductBrand)
    {
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="productGroup">
                    Product Brand<span class="required"></span>
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.productBrandList, new SelectList(Model.productBrandList, "id", "brandName"), "Please Select", new { @class = "form-control textboxcss selectpicker", id = "ddlProductBrand", Name = "ddlProductBrand" })
                </div>
            </div>
        </div>
    }
</div>

@if (Model.showUIModel != null && Model.showUIModel.isShowMonthText)
{
    <div class="form-group">
        <div class="col-md-6 col-xs-12">
            <div class="row">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ddlProductCate">
                    Report ประจำเดือน
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input type="text" name="reportDate" id="reportDate" value="@DocumentsAppCode.convertDateTHToShowCultureDateEN(@DateTime.Now, ConfigurationManager.AppSettings["formatDateMMyyyy"])" class="form-control fv">
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xs-12">

        </div>
    </div>
}

<hr />
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <a href="#" class="btn btn-warning"><i class="fa fa fa-reply fa-fw"></i>&nbsp;Cancel</a>
                <button type="submit" class="btn btn-success"><i class="fa fa fa-check fa-fw"></i>&nbsp;Submit</button>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">

    $('.selectpicker').selectpicker({
        liveSearch: true,
        showSubtext: true
    });

    $(function () {
        $("#startDate").datepicker();
        $("#endDate").datepicker();

        $("#reportDate").datepicker({
            format: "mm-yyyy",
            viewMode: "months",
            minViewMode: "months"
        });
    });
</script>
